@model Rajan_Project.Models.LoginClass

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
        <div class="form-group">
                <label asp-for="Name" class="lable-control"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" style="color:red"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="lable-control"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" style="color:red"></span>
        </div>

        <div class="form-group mt-2">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
            <div class="float-end">
               
                @if(TempData["error message"]!=null)
                {
                    <span style="color:red">@TempData["error message"]</span>
                }
            </div>
        </form>
       
        
</div>
    
</div>
